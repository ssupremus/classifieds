<div class="container">
  <div class="row">
    <div class="container">
      <div class="card-panel">
        <h5 class="center"><%= @subcategory.new_record? ? 'New Subcategory' : 'Edit Subcategory'%></h5>
        <%= form_for([:category, @subcategory], data: { errors: @subcategory.errors.full_messages }) do |f|%>
          <div class="input-field">
            <%= f.text_field :title, autofocus: true %>
            <%= f.label :title %>
          </div>
          <div class="input-field">
            <%= f.text_field :description %>
            <%= f.label :description %>
          </div>
          <div class="input-field">
            <%= f.button('<i class="material-icons right">arrow_forward</i>Submit'.html_safe,
                      class: 'btn lighten-2 waves-effect waves-light') %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
