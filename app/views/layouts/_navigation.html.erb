<header>
  <ul id="dropdown1" class="dropdown-content">
    <% if current_user %>
      <li><%= link_to 'My Ads', search_path(current_user.id) %></li>
      <li><%= link_to 'Account', user_path(current_user.id) %></li>
      <li class="divider"></li>
      <li><%= link_to "Sign out", destroy_user_session_path, data: { confirm: 'Are you sure?' }, :method => :delete %></li>
    <% end %>
  </ul>
  <ul id="dropdown2" class="dropdown-content">
    <% if current_user %>
      <li><%= link_to 'My Ads', search_path(current_user.id) %></li>
      <li><%= link_to 'Account', user_path(current_user.id) %></li>
      <li class="divider"></li>
      <li><%= link_to "Sign out", destroy_user_session_path, data: { confirm: 'Are you sure?' }, :method => :delete %></li>
    <% end %>
  </ul>
  <nav>
    <div class="nav-wrapper">
      <a href="#" class="brand-logo right">UKI ADS</a>
      <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
      <ul class="hide-on-med-and-down">
        <li><%= link_to 'Home', categories_path %></li>
        <% if current_user %>
          <li>
            <a class="dropdown-trigger" href="#!" data-target="dropdown1">
              <%= current_user.name %>
              <i class="material-icons right">arrow_drop_down</i>
            </a>
          </li>
        <% else %>
          <li><%= link_to 'Login', new_user_session_path %></li>
        <% end %>
        <li><%= link_to 'New Advertisement', new_advertisement_path %></li>
        <% if current_user and current_user.admin %>
          <li><%= link_to 'New Category', new_category_path %></li>
        <% end %>
        <li>
          <div class="row">
            <%= form_tag(search_index_path, method: "get", class: "col s12") do %>
              <div class="input-field col s6">
                <%= text_field_tag :search, nil, placeholder: "Search ...", class: "form-control" %>
              </div>
              <div class="input-field col s6">
                <%= button_tag('<i class="white-text material-icons tiny">search</i>'.html_safe,
                    class: 'btn-flat btn-large blue-grey darken-3 waves-effect waves-light') %>
              </div>
            <% end %>
          </div>
        </li>
        <!--<li>
          <div class="center row">
            <div class="col s12 " >
              <div class="row" id="topbarsearch">
                <div class="input-field col s6 s12">
                  <i class="material-icons prefix">search</i>
                  <input type="text" placeholder="search" id="autocomplete-input" class="autocomplete white-text" />
                </div>
              </div>
            </div>
          </div>
        </li>-->
      </ul>
      <div class="hide-on-large-only">
        <div class="mobile-search-panel">
          <div class="row">
            <%= form_tag(search_index_path, method: "get", class: "col s10") do %>
              <div class="input-field col s5">
                <%= text_field_tag :search, nil, placeholder: "Search ...", class: "form-control" %>
              </div>
              <div class="input-field col s5">
                <%= button_tag('<i class="white-text material-icons tiny">search</i>'.html_safe,
                    class: 'btn-flat btn-large blue-grey darken-3 waves-effect waves-light') %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </nav>
  <ul class="sidenav" id="mobile-demo">
    <li><%= link_to 'Home', categories_path %></li>
    <% if current_user %>
      <li>
        <a class="dropdown-trigger" href="#!" data-target="dropdown2">
          Account
          <i class="material-icons right">arrow_drop_down</i>
        </a>
      </li>
    <% else %>
      <li><%= link_to 'Login', new_user_session_path %></li>
    <% end %>
    <li><%= link_to 'New Advertisement', new_advertisement_path %></li>
    <% if current_user and current_user.admin %>
      <li><%= link_to 'New Category', new_category_path %></li>
    <% end %>
  </ul>
</header>
